<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_header"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true">


        <Button
            android:layout_width="fill_parent"
            android:text="@string/consulta_codigo"
            android:textAlignment="center"
            android:id="@+id/btn_consultarCodigo"
            style="@style/StyleBotones"
            android:onClick="clickCodigo" />

        <Button
            android:text="@string/consulta_nombre"
            android:textAlignment="center"
            android:id="@+id/btn_consultarNombre"
            style="@style/StyleBotones"
            android:onClick="clickNombre"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/facultad"
            android:id="@+id/textView2"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

</RelativeLayout>